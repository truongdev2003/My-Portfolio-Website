{
    "compilerOptions": {
        "lib": ["dom", "DOM.Iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strick": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "esModuleResolution": "bundle",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx":"preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.tsx", "next/types/**/*.ts"],
    "exclude": ["node_modules"]
}